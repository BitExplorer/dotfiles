!URxvt.font: xft:xos4 Terminus:pixelsize=12, xft:FontAwesome:pixelsize=24
!URxvt.font: xft:FontAwesome:pixelsize=24
!URxvt.font: xft:Source\ Code\ Pro\ Medium:pixelsize=13:antialias=true:hinting=true,xft:Source\ Code\ Pro\ Medium:pixelsize=13:antialias=true:hinting=true
!Urxvt.font: xft:SauceCodePro NF:pixelsize=16, xft:Monospace:pixelsize=16, xft:SauceCodePro Nerd Front Mono:pixelsize=16
!URxvt.font: xft:SauceCodePro NF:pixelsize=16, xft:dejavu sans mono:medium:pixelsize=16, xft:Monospace:pixelsize=16, xft:SauceCodePro Nerd Front Mono:pixelsize=16
!URxvt.font: xft:SauceCodePro NF:pixelsize=20
URxvt.font: xft:monofur for Powerline:pixelsize=20

!URxvt.termName: rxvt-unicode-256color
! TODO: verify this term as it works on all platforms
URxvt.termName: rxvt-256color
! TODO: testing on gentoo.
!URxvt.termName: xterm-256color

URxvt.letterSpace: 0
!URxvt.letterSpace: 1
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 24
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 4096
URxvt.scrollBar: true
URxvt.scrollBar_right: true
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false

! Location of custom Perl extensions
URxvt*.perl-lib: /home/henninb/.urxvt/perl-extensions

xterm*dynamicColors: true
URxvt*dynamicColors: on

URxvt*perl-ext-common: urxvt-colors,clipboard-past-on-right-click
URxvt*keysym.F12: perl:urxvt-colors:
!URxvt.keysym.Mod4-v: perl:clipboard:paste
!URxvt.keysym.Shift-Control-V: perl:clipboard:paste
!URxvt.keysym.F3: perl:clipboard:paste
!If true, copy to clipboard too
!URxvt.keyboard-select.clipboard:true

URxvt.transparent: true
URxvt.shading: 20
