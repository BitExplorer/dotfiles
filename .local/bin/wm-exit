#!/bin/sh

while [ "$select" != "NO" ] && [ "$select" != "YES" ]; do
    select=$(printf "NO\nYES" | dmenu -nb '#151515' -nf '#999999' -sb '#f00060' -sf '#000000' -fn 'monofur for Powerline' -i -p "Do you really want to exit the wm?")
    [ -z "$select" ] && exit 0
done
[ "$select" = "NO" ] && exit 0

WM=blah
if [ "${WM}" = "xmonad" ]; then
  pkill -x xmonad
elif [ "${WM}" = "bspwm" ]; then
  echo
elif [ "${WM}" = "i3" ]; then
  echo
else
  echo
fi

exit 0
