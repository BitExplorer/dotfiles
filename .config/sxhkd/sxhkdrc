alt + Return
    alacritty
alt + shift + i
    firefox -private-window
alt + i
    brave-browser
alt + e
    urxvt -e nvim
alt + shift + e
    emacs
alt + r
    urxvt -e lf
#alt + p
#    clipmenu -nb orange -nf '#444' -sb yellow -sf black -fn 'monofur for Powerline'
alt + shift + p
    dmenu_run -nb orange -nf '#444' -sb yellow -sf black -fn 'monofur for Powerline'
alt + shift + Escape
    wm-exit bspwm
alt + Escape
    $HOME/.config/bspwm/bspwmrc
alt + shift + BackSpace
    xdo close
alt + control + {t,s,f}
    bspc node -t {tiled,floating,fullscreen}
Print
    flameshot gui -p $HOME/Desktop
XF86AudioRaiseVolume
    amixer set Master 5%+ unmute
XF86AudioLowerVolume
    amixer set Master 5%- unmute
XF86AudioMute
   amixer set Master toggle
XF86AudioPlay
    mpc toggle
XF86AudioNext
    mpc next
XF86AudioPrev
    mpc prev
# make sxhkd reload its configuration files:
# alt + shift + Escape
#    pkill -USR1 -x sxhkd
alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}' --follow

